<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); -%>
</head>
<body>
    <header >
        <%- include('../partials/nav'); -%>
    </header>
    <main>
        <!-- hero image section  -->
        <section class=" d-flex align-items-center justify-content-start bg-dark" id="hero-section" >
            <div class="container text-center">
                <h1 class="text-light mb-5">Manage Your Inventory <br> Effortlessly!</h1>

                <div>
                    <a href="/items">
                        <button type="button" class="btn btn-info my-2 rounded-0">VIEW ITEMS</button>
                    </a>
                    <a href="/items/add">
                        <button type="button" class="btn btn-success my-2 rounded-0">ADD ITEM</button>
                    </a>
                    
                </div>
                
            </div>
        </section>
        

        <!-- inventory overview section  -->
        <section class="container my-5 ">
            <div class="d-flex justify-content-between align-items-center mb-5">
                <h2 class="pb-4">Explore Stock</h2>
                <a href="/items">
                    <button type="button" class="btn btn-info my-2 rounded-0">VIEW ALL ITEMS</button>
                </a>
            </div>
            <div class="row gap-4">

                <% categories.forEach(function(category){ %>
                    <div class="col-lg-5 bg-light border shadow-sm d-flex p-2">
                        <img src=<%= category.image %> alt="" class="w-50">
                        <div class="mx-4">
                            <h3><%= category.name %></h3>
                            <p>6 Avaliable</p>
                            <button type="button" class="btn btn-dark my-2 rounded-0">BROWSE</button>
                        </div>
                    </div>
                <% }); %>
            </div>
        </section>
    </main>
    <footer>
        <%- include('../partials/footer'); -%>
    </footer>
</body>

<!-- bootstrap script  -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
</html>