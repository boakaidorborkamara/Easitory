<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); -%>
</head>
<body>
    <header>
        <%- include('../partials/nav'); -%>
    </header>
    <main class="bg-light">
      
        <!-- inventory overview section  -->
        <section class="container my-5 ">
            <div class="d-flex justify-content-between align-items-center mb-5">
                <h2 class="pb-4">All Categories</h2>
                <div>
                    <a href="/categories/add">
                        <button type="button" class="btn btn-info my-2 rounded-0">Add New Category</button>
                    </a>
                </div>
            </div>
            <div class="row gap-4">

                <% categories.forEach(function(ele){ %>
                    <div class="card col-4 border-0 border-start border-end shadow-lg" style="width: 18rem;">
                        <img class="card-img-top" alt="..."  src=<%= ele.image %>>
                        <div class="card-body">
                            <h5 class="card-title"><%= ele.name %></h5>
                            <p class="card-text"><%= ele.description %></p>
                            <div class="row gap-2">
                                <a href=/categories/<%= ele._id %> class="btn btn-success rounded-0 col-12">View Items</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
               

               

               
            </div>
        </section>
    </main>
    <footer class="py-5 text-center bg-light">
        <%- include('../partials/footer'); -%>
    </footer>
    
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
</html>