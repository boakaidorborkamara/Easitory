<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); -%>
</head>
<body>
    <header >
        <%- include('../partials/nav'); -%>
    </header>
    <main class="bg-light">
      
        <!-- inventory overview section  -->
        <section class="container py-5 ">
            <h2 class="pb-4">Add New Item</h2>
            <div class="row gap-4">
                <form method="post" id="itemForm">
                    <!-- name  -->
                    <div class="form-group mb-4">
                        <label for="itemName" class="fw-bold">Name:</label>
                        <input type="text" class="form-control" id="itemName">
                    </div>
                   
                    <!-- Description  -->
                    <div class="form-group mb-4">
                        <label for="itemDescription" class="fw-bold">Description:</label>
                        <textarea class="form-control" id="itemDescription" rows="3"></textarea>
                    </div>

                    <!-- category  -->
                    <div class="form-group mb-4">
                        <label for="category" class="fw-bold">Category:</label>
                        <select class="form-select" aria-label="category" id="category">
                            <option selected>Select Category</option>
                            <% categories.forEach(function(ele){ %>
                                <option value=<%= ele._id %>><%= ele.name %></option>
                            <% }); %>
                        </select>
                    </div>

                    <!-- quantity  -->
                    <div class="mb-4 ">
                        <label for="quantity" class="form-label fw-bold">Number of Items:</label>
                        <input class="form-control" type="number" id="quantity">
                    </div>

                    <!-- price  -->
                    <div class="mb-4 ">

                        <label for="price" class="form-label fw-bold">Price:</label>
                        <input class="form-control" type="number" id="price">
                    </div>
                    

                    <!-- image  -->
                    <div class="mb-3 ">
                        <label for="formFile" class="form-label fw-bold">Item Image:</label>
                        <input class="form-control" type="file" id="formFile">
                    </div>
                    
                    <button type="submit" class="btn btn-primary rounded-0">Add Item</button>
                </form>
                
            </div>
            
        </section>
    </main>
    <footer class="py-5 text-center bg-light">
        <%- include('../partials/footer'); -%>
    </footer>
    
</body>
<script src="/scripts/script.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
</html>