<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); -%>
</head>
<body>
    <header >
        <%- include('../partials/nav'); -%>
    </header>
    <main class="bg-light">
      
        <!-- inventory overview section  -->
        <section class="container py-5 ">
            <h2 class="pb-4">Add New Category</h2>
            <div class="row gap-4">
                <form method="post" action="/categories" enctype="multipart/form-data" id="categoryForm">
                    <div class="form-group mb-4">
                        <label for="categoryName">Item Name:</label>
                        <input type="text" required minlength="2"  class="form-control" name="category-name" value="test" id="categoryName">
                    </div>
                   
                    
                    <div class="form-group mb-4">
                        <label for="categoryDescription">Description:</label>
                        <textarea class="form-control" id="categoryDescription" name="description" rows="3" required minlength="2">kdk</textarea>
                    </div>

                    <div class="mb-3 ">
                        <label for="formFile" class="form-label">Category Image:</label>
                        <input class="form-control" name="category-image" required type="file" id="formFile">
                    </div>
                    <button type="submit" class="btn btn-primary rounded-0">Add Category</button>
                </form>
                
            </div>
            
        </section>
    </main>
    <footer class="py-5 text-center bg-light">
        <%- include('../partials/footer'); -%>
    </footer>
    
</body>
<script src="/scripts/script.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
    
</html>