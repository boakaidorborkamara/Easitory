<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); -%>
</head>
<body>
    <header >
        <%- include('../partials/nav'); -%>
    </header>
    <main class="bg-light">
      
        <!-- inventory overview section  -->
        <section class="container my-5 ">
            <div class="d-flex justify-content-between align-items-center mb-5">
                <h2 class="pb-4">All Items</h2>
                <div>
                    <a href="/items/add">
                        <button type="button" class="btn btn-info my-2 rounded-0">Add New Item</button>
                    </a>
                </div>
            </div>
            <div class="row gap-4">

                <% items.forEach(function (item){ %>
                    
                    <div class="card col-4 border-0 border-end border-start shadow-lg" style="width: 18rem;">
                        <img src=<%= item.image %>
                            class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"><%= item.name %></h5>
                            <p class="card-text">Price: $<%= item.price %></p>
                            <div class="row gap-2">
                                <a  class="btn btn-success rounded-0 col" href=<%= item.id %>>VIEW DETAILS</a>
                            </div>
                        </div>
                    </div>
                <% }); %> 
            </div>
        </section>
    </main>
    <footer class="py-5 text-center bg-light">
        <%- include('../partials/footer'); -%>
    </footer>
    
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
</html>